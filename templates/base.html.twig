<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!{% endblock %}
        </title>
        {% block stylesheets %}{% endblock %}
        {{ encore_entry_link_tags('app') }}
    </head>
    <body>
        <div class="container">
            <div class="row">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/">{{ 'Spare parts management' | trans }}</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarColor01">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item dropdown active">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">{{ 'Spare parts' | trans }}</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/piece">Stock</a>
                                        <a class="dropdown-item" href="/piece/categorie">{{ 'Category' | trans }}</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">{{ 'Movements' | trans }}</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/mouvement/new">{{ 'Receipt' | trans }}</a>
                                        <a class="dropdown-item" href="#">{{ 'Release' | trans }}</a>
                                        <a class="dropdown-item" href="#">{{ 'History' | trans }}</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/inscription">{{ 'Sign up' | trans }}</a>
                                </li>
                                {% if not app.user %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('security_login') }}">{{ 'Sign in' | trans }}</a>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('security_logout') }}">{{ 'Sign out' | trans }}</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </nav>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{% block page_title %}{% endblock %}</h2>
                    </div>
                    <div class="panel-body">
                        {% block body %}{% endblock %}
                    </div>
                </div>

                {{ encore_entry_script_tags('app') }}
                {% block javascripts %}{% endblock %}
            </div>
        </div>
    </body>
</html>